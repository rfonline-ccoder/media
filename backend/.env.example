# SwagMedia Backend Configuration

# База данных MySQL
# Для локальной разработки создайте свою БД:
# CREATE DATABASE swagmedia_local CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
# CREATE USER 'swag_user'@'localhost' IDENTIFIED BY 'your_password';
# GRANT ALL PRIVILEGES ON swagmedia_local.* TO 'swag_user'@'localhost';

# Локальная разработка
MYSQL_URL="mysql+pymysql://swag_user:your_password@localhost:3306/swagmedia_local"

# Или использование продакшн БД (если есть доступ)
# MYSQL_URL="mysql+pymysql://hesus:ba7a7m1ZX3.,@89.169.1.168:3306/swagmedia1"

# CORS настройки
# Для разработки разрешаем все домены
CORS_ORIGINS="*"

# Для продакшена укажите конкретные домены:
# CORS_ORIGINS="https://swagmedia.site,https://www.swagmedia.site,http://localhost:3000"

# JWT Secret Key (ОБЯЗАТЕЛЬНО замените на свой!)
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"

# Настройки приложения
DEBUG=true
LOG_LEVEL=INFO

# Настройки Rate Limiting (опционально)
RATE_LIMIT_ENABLED=true
REDIS_URL="redis://localhost:6379/0"

# Email настройки (опционально)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@swagmedia.site"